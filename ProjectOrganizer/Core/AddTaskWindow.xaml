<Window x:Class="ProjectOrganizer.Core.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title ="Add Task" Width ="480" Height="480">

    <StackPanel Orientation="Vertical"
                Margin="10">
        <TextBlock Text ="Add New Task" FontSize="20" FontWeight="Bold"/>
        <TextBlock Text ="Name: " FontSize="14" />
        <TextBox x:Name = "NameBox"/>
        <TextBlock Text ="EndDate: " FontSize="14" />
        <DatePicker x:Name = "DateBox"/>
        <TextBlock Text ="Money: " FontSize="14" />
        <TextBox x:Name = "MoneyBox"/>
        <TextBlock Text ="Time: " FontSize="14" />
        <TextBox x:Name = "TimeBox"/>

        <Button x:Name="Submit" Content ="Submit" Click="Submit_Click"/>

    </StackPanel>

</Window>